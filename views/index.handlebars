<div class ="container-fluid">
    <div class ="row d-flex justify-content-start">
        <div class ="col-md-4">
            <h3 class ="text-center mt-5">Menu></h3>
            <hr>
            <ul>
                {{#each burger}}
                {{#unless this.devoured}}
                <li class="mt-3" style="list-style: none;">
                    <button data-id="{{this.id}}" type="button" class="btn btn-warning eat text-white mr-3"
                    style="border: solid white 1px;">Eat it!
                    </button>
                    {{this.burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <div class="row d-flex justify-content-center">
                <h3 class="px-5 mt-5 text-center">You Want a Burger?</h3>
            </div>
        </div>

        <div class="col md-4">
            <h3 class="text-center mt-5">Devoured Burgers</h3>
            <hr>
            <ul>
                {{#each burger}}
                {{#if this.devoured}}
                <li class="mt-3" style="list-style: none">
                    <button data-id="{{this.id}}" type="button" class="btn btn-danger remove text-white mr-3"
                    style="border: solid white 1px">remove</button>
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-12">
            <h2 class="text-center text-white">Add a burger!</h2>
            <div class="row d-flex justify-content-center">
                <form class="create-form">
                    <div class="form-group">
                        <label for="burg" class="text-white">Burger name:</label>
                        <input type="text" id="burg" name="name" style="height: 30px;">
                        <button type="submit" class="btn btn-success" style="border: solid white 1px;">Add Burger</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>